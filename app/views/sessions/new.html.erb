<% provide :title, t("login") %>
<h1><%= t("login") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email, t("sessions.new.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t("sessions.new.password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= link_to t(".forgot_password"), new_password_reset_path %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t("sessions.new.remember_me") %></span>
      <% end %>
      <%= f.submit t("login"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t "sessions.new.new_user" %> <%= link_to t("sessions.new.signup_now!"), signup_path %></p>
  </div>
</div>
